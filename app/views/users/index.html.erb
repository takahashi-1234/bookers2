<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/list',user:@user ,book:@book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h1>Users</h1>
            <table class="table table-hover">
                <% @users.each do |user| %>
                <tr>
                    <td><%= attachment_image_tag user,:profile_image,fallback:"no_image.jpg",size:"60x72" %>
                    <td><%= user.name %>
                    <td><%= link_to "Show",user_path(user.id) %>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>