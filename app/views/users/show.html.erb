<%= render 'users/list',user:@user ,book:@book %>

<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @user.books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user,:profile_image,fallback:"no_image.jpg",size:"60x60" %></td>
    <td><%= link_to book_path do %><%= book.title %><% end %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>