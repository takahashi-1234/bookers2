<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list',user:@user ,book:@book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <% @user.books.each do |book| %>
        <tr>
          <td>
            <a href="/users/<%= book.user.id %>">
            <%= attachment_image_tag book.user,:profile_image,fallback:"no_image.jpg",size:"60x72" %>
            </a>
          </td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>