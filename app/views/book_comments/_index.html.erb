<p class="font-weight-bold">コメント:<%= comments.count %>件</p>
<table>
 <% comments.each do |comment| %>
    <tr>
      <td><%= attachment_image_tag comment.user,:profile_image,fallback:"no_image.jpg",size:"60x72" %></td>
      <td><%= comment.comment %></td>
      <% if comment.user==current_user %>
        <td><%= link_to "destroy" ,  book_book_comment_path(comment.book_id,comment.id) ,method: :delete,remote: true, class:"btn btn-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>