<%= render 'users/list',user:@user ,book:@book %>


<div>
  <h1>Books</h1>
  <table>
    <tr>
      <th>title</th>
      <th>opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book_path(book.id) do %><%= attachment_image_tag book.user, :profile_image,fallback:"no_image.jpg",size:"60x60" %><% end %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
</div>