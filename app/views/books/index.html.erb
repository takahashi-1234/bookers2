<div class="container mt-3">
  <div class="row">

    <div class="col-lg-4">
      <%= render 'users/list',user:@user ,book:@book %>
    </div>

    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </thead>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image,fallback:"no_image.jpg",size:"60x72" %><% end %></td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>