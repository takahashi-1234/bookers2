<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
        <%= render 'users/list',user:@user ,book:@book %>
    </div>

    <div class="col-lg-8">

        <h1>Book detail</h1>
        <table class="table table-hover">
          <thead>
            <td class="text-center">
              <%= link_to user_path(@create_book.user.id) do %>
              <%= attachment_image_tag @create_book.user,:profile_image,fallback:"no_image.jpg",size:"60x72" %><br>
              <%= @create_book.user.name %>
              <% end %>
            </thead>
            <td><%= @create_book.title %></td>
            <td><%= @create_book.body %></td>
            <% if @create_book.user.id==current_user.id %>
              <td><%= link_to "Edit",edit_book_path(@create_book.id),class:"btn btn-success" %></td>
              <td><%= link_to "Destroy",book_path(@create_book.id),method: :delete,class:"btn btn-danger","data-confirm"=>"削除しますか？" %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
 </div>