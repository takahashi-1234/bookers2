      
      <table class="table table-hover">
        <thead>
          <th></th>
          <th>title</th>
          <th>opinion</th>
          <th></th>
        </thead>

<% books.each do |book| %>
<tr>
  <td>
  <a href="/users/<%= book.user.id %>">
  <%= attachment_image_tag book.user, :profile_image,fallback:"no_image.jpg",size:"60x72" %>
  </a>
  </td>
  <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
  <td class="small"><%= book.body %></td>
  <td id="fav_btn_<%= book.id %>">
    <% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book.id),method: :delete , remote:true do %>
    <span class="btn btn-danger">♥<%= book.favorites.count %></span>
    <% end %>
    <% else %>
    <%= link_to book_favorites_path(book.id),method: :post , remote:true do %>
    <span class="btn btn-primary">♡<%= book.favorites.count %></span>
    <% end %>
    <% end %>
  </td>
  <td>コメント数:<%= book.book_comments.count %></td>
</tr>
<% end %>
</table>